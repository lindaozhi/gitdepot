<!-- START:head -->
<!DOCTYPE html>
<html>
<head>
  <title>Pragprog Books Online Store</title>
<!-- START:stylesheet -->
  <%= stylesheet_link_tag "scaffold" %>
  <%= stylesheet_link_tag "depot", :media => "all" %><!-- <label id="code.slt"/> -->
<!-- END:stylesheet -->
  <%= javascript_include_tag "jquery", :type => "text/javascript"%>
  <%= javascript_include_tag "enlarge", :type => "text/javascript"%>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %><!-- <label id="code.csrf"/> -->
</head>
<body id="store">
	<div id="banner">		
		<%= form_tag store_path,:class => 'locale' do %>
		<%= select_tag 'set_locale',options_for_select(LANGUAGES,I18n.locale.to_s),:onchange => 'this.form.submit()' %>
		<%= submit_tag 'submit'%>
		<%= javascript_tag "$$('.locale input').each(Element.hide)"%>
		<% end %>
		<%= image_tag("logo.png") %>
		<%= @page_title ||t('.title').html_safe%><!-- <label id="code.depot.e.title"/> -->
	</div>
	<div id="columns">		
		<div id="side">
			<%if session[:user_id]%>
				<% user = User.find(session[:user_id])%>
				<%= link_to user.name %>
			<%else%>
				<%= link_to t('.login'), login_path,:medthod => :new%>
			<%end%>
			<%= link_to t('.register'),register_path,:medthod => :newuser %><br/>		
			
			<%= form_tag show_search_url do%>
	  		<fieldset>
	  			<legend class="search"><%=t('.search')%></legend>
  					<%= text_field_tag :search_name,nil%>
	  				<%= submit_tag t('.go')%>
	  			</fieldset>
    		<%end%>

			<div id="cart">
				<% if @cart %>
			       <%= hidden_div_if(@cart.line_items.empty?,:id=>"cart") do %>
			       <%= render @cart %>
			       <% end %>
		        <% end %>
			</div>			
			<p></p>
			<%= link_to t('.home'),store_path %><br />			
			<a href="http://www..../fag"><%= t('.questions') %></a><br />
			<%= link_to t('.news'),messages_path %><br />				
			<a href="http://www..../contact"><%= t('.contact') %></a><br />	
			<a href="/helpshell/admin.htm"><%= t('.admin_help')%></a><br/>	
			<a href="/helpshell/user.htm"><%= t('.user_help')%></a>><br/>	
			
			<% if session[:user_id] && session[:user_type] == 1%>
				<br />
				<%= link_to t('.favourite'), favourites_path%><br/>
				<%= link_to t('.my_order'),userorders_path%><br />	
				<%= link_to t('.my_order_record'),userorderrecord_path%><br/>
				<br/>
				<%= link_to t('.order'),orders_path %><br/>
				<%= link_to t('.product'), products_path %><br/>
				<%= link_to t('.user'),users_path %><br/>
				<%= link_to t('.order_record'),ordersrecord_path%><br/>
				<%= link_to t('.comment'),comments_path%><br/>				
				<br/>
				<%= button_to t('.logout'),logout_path,:method => :delete %>
			<% elsif session[:user_id] && session[:user_type] == 2%>
				<br />
				<%= link_to t('.favourite'), favourites_path%><br/>
				<%= link_to t('.my_order'),userorders_path%><br />	
				<%= link_to t('.my_order_record'),userorderrecord_path%><br/>
				<br/>
				<%= button_to t('.logout'),logout_path,:method => :delete %>
			<% end %>
		</div>
		<div id="main">		
			<%= yield %><!-- <label id="code.depot.e.include"/> -->
		</div>
	</div>
</body>
</html>
