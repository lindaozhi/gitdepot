<h1><%= t('.list')%></h1>

<table>
  <tr>
  	<th><%= t('.user_name')%></th>
    <th><%= t('.order_name')%></th>
    <th><%= t('.address')%></th>
    <th><%= t('.order')%></th>
    <th><%= t('.paytype')%></th>
    <th><%= t('.order_status')%></th>
    <th></th>
    <th></th>
    <th></th>  
    <th></th>    
  </tr>

<% @orders.each do |order| %>
  <tr>
  	<td><%= order.user_name%></td>
    <td><%= order.name %></td>
    <td><%= order.address %></td>
    <td><%= order.email %></td>
    <td><%= order.pay_type %></td>
    <td><%= 'unsent'%></td>
    <td><%= link_to 'Show', order %></td>
    <td><%= link_to 'Send', {:controller => "orders",:action => "sendorder",:id => order }%></td>
    <td><%= link_to 'Cancel', {:controller => "orders",:action => "cancelorder",:id => order } %></td>
   <!--  <td><%= link_to 'Edit', edit_order_path(order) %></td> -->
    <td><%= link_to 'Destroy', order, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to t('.new'), new_order_path %>
<p><%= will_paginate @orders %></p>
