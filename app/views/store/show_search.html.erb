<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<marquee>
	<% @products.each do |product| %>
		<%=image_tag(product.image_url) %>		
	<% end %>
</marquee>

	<%= form_tag show_url do%>
	  <fieldset>
	  	<legend class="order"><%= t('.order_by')%></legend>
            <%= link_to t('.title'), {:controller=>"store", :action=>"show_search",:search_name=>@search_name,:order=>"title"} %> 
	        <%= link_to t('.price'), {:controller=>"store", :action=>"show_search",:search_name=>@search_name,:order=>"price"} %>
	  </fieldset>
    <%end%>
<h1><%= t('.search_result')%></h1>

<% @products.each do |product| %>
  <div class="entry">
  	<%= image_tag(product.image_url) %>
  	<h3><%= link_to  product.title ,{:controller => "products" ,:action => "show" ,:id => product},:style=>"text-decoration:none"%>&nbsp&nbsp (<%=t('.inventory')%><%= product.inventory%>)&nbsp&nbsp(<%= t('.sale')%><%= product.sales%>)</h3>
  	<%= sanitize product.description %>
  	<div class="price_line">
  		<span class="price"><%= number_to_currency(product.price) %></span>
  		<% if product.inventory != 0%>
  			<%= button_to t('.add') , line_items_path(:product_id => product),
  				:remote => true %>  
  		<%end%>	
  		<%= button_to t('.favourite'), {:controller => "favourites",:action => "create",:id=> product}%>	
    </div>
  </div>
<% end %>

